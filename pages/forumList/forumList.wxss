.text{
  font-size:13px;
}

.mod-list{
  border-radius:10px;
  flex-direction: column;
  border:1px solid #ccc;
  box-sizing:border-box;
  Margin:10px; 
}
.wrapper{
	display:flex;
	flex-wrap:nowrap;

}

.subject{
  font-size:14px;
  box-sizing:border-box;
  align-items:center;
}


.message{
	font-size:12px;
	color:#999;
	box-sizing:border-box;
	padding:5px 0px ;
}
.page_imgs{
	display:flex;
	flex-wrap:nowrap;
	justify-content: space-around;

}

.page_img{
  Margin:10px 10px 5px 0px; 
  border-radius:5px;
  justify-content: space-around;
}

.Top {
font-size:13px;
overflow: hidden; /*自动隐藏文字*/
text-overflow: ellipsis;/*文字隐藏后添加省略号*/
white-space: nowrap;/*强制不换行*/
color:#6699ff;border-top:1px #ccc solid;
padding: 5px 10px 5px 15px;
}

.pad{
  padding: 5px;
  line-height: 20px;
}

