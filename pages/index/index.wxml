<!--index.wxml-->
<view>
  <view   class="userinfo" >
    <image bindtap="bindimg" class="userinfo-avatar" src="{{userInfo.imageUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.username}}</text>
  </view>
</view>
<view class="list">
    <view class="item" bindtap="user">
        <image src="../../image/zl.png"/>个人资料
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="mythreadNew">
        <image src="../../image/tz.png"/>我的帖子
        <text class="jump">〉</text>
    </view>
     <view class="item" bindtap="ver">
        <image src="../../image/版本说明.png"/>版本说明
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="Refresh">
        <image src="../../image/点击.png"/>刷新登录
        <text class="jump">:-)</text>
    </view>
</view>
